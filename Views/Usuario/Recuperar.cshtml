@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml"; //Layout externo
}

<link rel="stylesheet" href="~/css/InicioSesion.css" />
<script src="https://kit.fontawesome.com/ddc6aa5d21.js" crossorigin="anonymous"></script>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

<div class="login-wrap">
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@modelError.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

<div class="login-html">
    <h2>Recupera tu Contraseña</h2>
    <div class="login-form">
        <form method="post" asp-action="RestablecerConfirmar" asp-controller="Usuario">
            <div class="group">
                <label for="user" class="label">Correo Electrónico</label>
                <input id="user" type="text" name="email" class="input" required>
            </div>
            <br />
            <div class="group">
                <input type="submit" class="button" value="Enviar al Correo">
            </div>
            <div class="hr"></div>
            <div class="foot-lnk">
                <a asp-action="AccionesUsuario">Volver a inicio de sesión</a>
            </div>
        </form>
    </div>
</div>
</div>
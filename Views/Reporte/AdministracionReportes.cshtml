<script>
    // Obtener elementos
    const reportModal = document.getElementById("reportModal");
    const closeReportModal = document.getElementById("closeReportModal");

    // Abrir modal
    function openReportPopup(reportId) {
        // Aquí puedes cargar dinámicamente los detalles del reporte según el reportId
        document.getElementById("reportDetails").innerHTML = `Detalles del Reporte #${reportId}: Mi pedido venia con todo revuelto y una mordida`;
        reportModal.style.display = "block";
    }

    // Cerrar modal
    closeReportModal.onclick = function () {
        reportModal.style.display = "none";
    }

    window.onclick = function (event) {
        if (event.target == reportModal) {
            reportModal.style.display = "none";
        }
    }

